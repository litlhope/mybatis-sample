<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- MyBatis는 namespace의 값인 hejairi.sample.spring.mybatis.module.UserMapper 인터페이스를 매퍼로 연결한다. -->
<mapper namespace="hejairi.sample.spring.mybatis.module.UserMapper">

	<select id="findById" resultType="hejairi.sample.spring.mybatis.model.User" parameterType="java.lang.Long">
		select id, email, userName, tel, sex from user where id = #{id}
	</select>

	<select id="findAll" resultType="hejairi.sample.spring.mybatis.model.User">
		select id, email, userName, tel, sex from user
	</select>

	<insert id="insert" parameterType="hejairi.sample.spring.mybatis.model.User">
		insert into user(email, userName, tel, sex) values(#{email}, #{userName}, #{tel}, #{sex})
		<!--<selectKey keyProperty="id" resultType="long" order="AFTER">-->
			<!--CALL SCOPE_IDENTITY()-->
		<!--</selectKey>-->
	</insert>

</mapper>